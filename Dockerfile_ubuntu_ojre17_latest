# --------------------------------------------------------------------
# ------------------------项目环境和工具安装-----------------------------
# --------------------------------------------------------------------

# 安装jre 解压路径后的路径 > /usr/local/jdk-17.0.5+8-jre
ADD OpenJDK17U-jre_x64_linux_hotspot_17.0.5_8.tar.gz /usr/local
# 设置变量
ENV JRE_HOME /usr/local/jdk-17.0.5+8-jre
ENV CLASSPATH .
ENV PATH $PATH:$JRE_HOME/bin

# --------------------------------------------------------------------
# --------------------------项目数据准备--------------------------------
# --------------------------------------------------------------------

# 复制数据

# --------------------------------------------------------------------
# ------------------------docker image 最后配置------------------------
# --------------------------------------------------------------------

# 切换工作目录,进容器时的默认目录
WORKDIR /usr/local
